@model IEnumerable<VoiceSageAssessment.Models.ContactDetail>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewAll</title>
</head>
<body>
 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.groupName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupName)
                @Html.HiddenFor(modelItem => item.groupId)
            </td>
            <td>
                 <a class="btn btn-primary btn-sm" onclick="editContactDetails('@Url.Action("AddOrEdit", "Contact", new { contactId=@item.columnId})')">Edit</a>
                 <a class="btn btn-danger btn-sm" onclick="deleteContactDetails('@Url.Action("Delete", "Contact", new { contactId=@item.columnId})')">Delete</a>

            </td>
        </tr>
    }
    
    </table>
</body>
</html>
